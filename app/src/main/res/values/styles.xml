<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>
        <item name="background">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AppTheme.Launcher" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="GameModeButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@android:color/holo_green_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>